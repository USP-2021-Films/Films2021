<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.filmchoice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/films_icon_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/films_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FilmChoice">
        <activity android:name=".AddActivity"
            android:label="Add"></activity>
        <activity android:name=".EditActivity"
            android:label="Edit"/>
        <activity android:name=".ShowFilm"
            android:label="Info"/>
        <activity android:name=".MainActivity"
            android:label="Films">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>